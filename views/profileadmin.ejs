<body>
  
  <%- include('navbar') %>



  <section style="background-color: #eeeeee; height: 100vh;">
    <form   action="/admin/updateprofile/<%= admin.id_admin %>" method="post" enctype="multipart/form-data">
    
        <div class="container py-5 h-100">
          <p class="label-profile">Profile</p>
          <div class="row d-flex justify-content-center align-items-center h-100 ">
            <div class="col col-lg-6 mb-4 mb-lg-0 ">
              <div class="card mb-3" style="border-radius: .5rem;">
                <div class="row g-0">
                  <div class="col-md-5 gradient-custom text-center text-white"
                    style="border-top-left-radius: .5rem; border-bottom-left-radius: .5rem;">
                    <img src="/image/<%= admin.image %>" 
                    alt="Avatar" class="img-fluid my-5 rounded-circle" style="width: 100px; height: 100px;" />
                    <input type="file" id="image" name="image" accept="image/*" onchange="displayImage(event)" class="input-mid">
                    
                    
                    
                     <button type="submit" class="btn btn-colorless ">
                      <i class="far fa-edit"></i> Submit
                    </button>
                  </div>
                  <div class="col-md-5">
                    <div class="card-body p-4">
                      <h6>Information</h6>
                      <hr class="mt-0 mb-4">
                      <div class="row pt-1">
                        <div class="col-6 mb-3 ">
                          <h6>Username</h6>
                           <input type="text" id="username" name="username"  class="form-control-input"  value="<%= admin.username %>" />
                        </div>
                    </div>
                    <div class="row pt-1">
                      <div class="col-6 mb-3">
                        <h6>Email</h6>
                        <input type="email" id="email" name="email" class="form-control-input"  value="<%= admin.email %>" />
                      </div>
                      
                     
                    
                   
                  </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
    
        
      </form>

         
