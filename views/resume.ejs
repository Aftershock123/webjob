                    <div class="row">
                      <div class="col-sm-3">
                        <p class="mb-0">Work Experience</p>
                      </div>
                      <div class="col-sm-7">
                        <textarea type="text" class="form-control" id="work_experience" name="work_experience" rows="4"><%= resume.work_experience %></textarea>
                      </div>
                    </div>
                    <hr>
                    <div class="row">
                      <div class="col-sm-3">
                        <p class="mb-0">Skills</p>
                      </div>
                      <div class="col-sm-7">
