<body>
  <!--if resume.id_user ==undefined ให้แสดงหน้าaddแต่ถ้าไม่ให้แสดงhistory -->
  <%- include('navbar') %>

    <% if(resume=='undefined' || resume==null) { %>
      <div class="container py-5 h-100">
        <p class="label-profile">Resume</p>

      </div>



      <form action="/user/addresume/<%= user.id_user %>" method="post">
      <div class="row" style="justify-content:center;">


          <div class="col-lg-6">
            <div class="card p-5">
              <div class="card">
                <div class="card-body">
                  <div class="row">
                    <div class="col-sm-3">
                      <p class="mb-0">Professional Summary</p>
                    </div>
                    <div class="col-sm-9">
                      <input type="text" id="professional_summary" name="professional_summary" />
                    </div>
                  </div>
                  <hr>
                  <div class="row">
                    <div class="col-sm-3">
                      <p class="mb-0">Work Experience</p>
                    </div>
                    <div class="col-sm-9">
                      <input type="text" id="work_experience" name="work_experience" />
                    </div>
                  </div>
                  <hr>
                  <div class="row">
                    <div class="col-sm-3">
                      <p class="mb-0">Skills</p>
                    </div>
                    <div class="col-sm-9">
                      <input type="text" id="skills" name="skills" />
                    </div>
                  </div>
                  <hr>
                  <div class="row">
                    <div class="col-sm-3">
                      <p class="mb-0">Education</p>
                    </div>
                    <div class="col-sm-9">
                      <input type="text" id="education" name="education" />
                    </div>
                  </div>
                  <hr>
                  <div class="row">
                    <div class="col-sm-3">
                      <p class="mb-0">Languages</p>
                    </div>
                    <div class="col-sm-9">
                      <input type="text" id="languages" name="languages" />
                    </div>
                  </div>
                  <hr>
                  <div class="row">
                    <div class="col-sm-3">
                      <p class="mb-0">Interests</p>
                    </div>
                    <div class="col-sm-9">
                      <input type="text" id="interests" name="interests" />
                    </div>
                  </div>
                  <hr>
                  <div class="row">
                    <div class="col-sm-3">
                      <p class="mb-0">Contact</p>
                    </div>
                    <div class="col-sm-9">
                      <input type="text" id="contact" name="contact" />
                    </div>
                  </div>
                  <hr>
                  <button type="submit" class="btn btn-primary">save</button>
                </div>
              </div>
            </div>
          </div>
        </div>
      </form>
      <% } else { %>
        <section style="background-color: #eeeeee; ">
        <div class="container py-5 h-100">
          <p class="label-profile">Resume</p>

        </div>

        <form action="/user/updateresume/<%= user.id_user %>" method="post">
        <div class="row" style="justify-content:center ;">

            <div class="col-lg-6">
              <div class="card  p-5">
                <div class="card">
                  <div class="card-body">
                    <div class="row">
                      <div class="col-sm-3">
                        <p class="mb-0">Professional Summary</p>
                      </div>
                      <div class="col-sm-9">
                        <input type="text" id="professional_summary" name="professional_summary"
                          value="<%= resume.professional_summary %>" />
                      </div>
                    </div>
                    <hr>
                    <div class="row">
                      <div class="col-sm-3">
