<body>
  <!--if resume.id_user ==undefined ให้แสดงหน้าaddแต่ถ้าไม่ให้แสดงhistory -->
  <%- include('navbar') %>
  <% if(locals.errors){ %>
    <% Object.values(errors).forEach(function(error){%>
      <script type="text/javascript">
        Swal.fire({
          title: "<%= error.msg || errors  %>",
          icon: 'warning',
        })
      </script>
      <%})%>
        <%} else if (locals.success) { %>
          <script type="text/javascript">
            Swal.fire({
              title: "<%= success  %>",
              icon: 'success',
            })
          </script>
          <%}%>

    <% if(resume=='undefined' || resume==null) { %>
      <section style="background-color: #eeeeee; ">
      <div class="container py-5  d-flex align-items-center justify-content-center text-center">
        <p class="label-profile"><b>Resume</b></p>
      </div>


      <form action="/user/addresume/<%= user.id_user %>" method="post">
      <div class="row" style="justify-content:center;">


          <div class="col-lg-6">
            <div class="card p-5">
              <div class="card">
                <div class="card-body">
                  <div class="row">
                    <div class="col-sm-3">
                      <p class="mb-0">Professional Summary</p>
                    </div>
                    <div class="col-sm-7">
                      <textarea type="text" id="professional_summary" name="professional_summary" class="form-control"  rows="4"></textarea>
                    </div>
                  </div>
                  <hr>
                  <div class="row">
                    <div class="col-sm-3">
                      <p class="mb-0">Work Experience</p>
                    </div>
                    <div class="col-sm-7">
                      <textarea type="text" id="work_experience" name="work_experience" class="form-control"  rows="4"></textarea>
                    </div>
                  </div>
                  <hr>
                  <div class="row">
                    <div class="col-sm-3">
                      <p class="mb-0">Skills</p>
                    </div>
                    <div class="col-sm-7">
                      <textarea type="text" id="skills" name="skills" class="form-control"  rows="4"></textarea>
                    </div>
                  </div>
                  <hr>
                  <div class="row">
                    <div class="col-sm-3">
                      <p class="mb-0">Education</p>
                    </div>
                    <div class="col-sm-7">
                      <textarea type="text" id="education" name="education" class="form-control"  rows="4"></textarea>
                    </div>
                  </div>
                  <hr>
                  <div class="row">
                    <div class="col-sm-3">
                      <p class="mb-0">Languages</p>
                    </div>
                    <div class="col-sm-7">
                      <textarea type="text" id="languages" name="languages" class="form-control"  rows="4"></textarea>
                    </div>
                  </div>
                  <hr>
                  <div class="row">
                    <div class="col-sm-3">
                      <p class="mb-0">Interests</p>
                    </div>
                    <div class="col-sm-7">
                      <textarea type="text" id="interests" name="interests"  class="form-control"  rows="4"></textarea>
                    </div>
                  </div>
                  <hr>
                  <div class="row">
                    <div class="col-sm-3">
                      <p class="mb-0">Contact</p>
                    </div>
                    <div class="col-sm-7">
                      <textarea type="text" id="contact" name="contact"  class="form-control"  rows="4"></textarea>
                    </div>
                  </div>
                  <hr>
                  <button type="submit" class="btn btn-outline-primary" style="margin-left: 70vh;" data-mdb-ripple-color="dark">save</button>
                </div>
              </div>
            </div>
          </div>
        </div>
      </form>
    </section>
      <% } else { %>
        <section style="background-color: #eeeeee; ">
        <div class="container py-5 h-100">
          <p class="label-profile">Resume</p>

        </div>

        <form action="/user/updateresume/<%= user.id_user %>" method="post">
        <div class="row" style="justify-content:center ;">

            <div class="col-lg-6">
              <div class="card  p-5">
                <div class="card">
                  <div class="card-body">
                    <div class="row">
                      <div class="col-sm-3">
                        <p class="mb-0">Professional Summary</p>
                      </div>
                      <div class="col-sm-7">
                        <textarea type="text" class="form-control" id="professional_summary" name="professional_summary" rows="4" ><%= resume.professional_summary %></textarea>
