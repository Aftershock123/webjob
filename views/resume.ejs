                      <div class="col-sm-3">
                        <p class="mb-0">Skills</p>
                      </div>
                      <div class="col-sm-9">
                        <input type="text" id="skills" name="skills" value="<%= resume.skills %>" />
                      </div>
                    </div>
                    <hr>
                    <div class="row">
                      <div class="col-sm-3">
                        <p class="mb-0">Education</p>
                      </div>
                      <div class="col-sm-9">
                        <input type="text" id="education" name="education" value="<%= resume.education %>" />
                      </div>
                    </div>
                    <hr>
                    <div class="row">
                      <div class="col-sm-3">
                        <p class="mb-0">Languages</p>
                      </div>
                      <div class="col-sm-9">
                        <input type="text" id="languages" name="languages" value="<%= resume.languages %>" />
                      </div>
                    </div>
                    <hr>
                    <div class="row">
                      <div class="col-sm-3">
                        <p class="mb-0">Interests</p>
                      </div>
                      <div class="col-sm-9">
                        <input type="text" id="interests" name="interests" value="<%= resume.interests %>" />
                      </div>
                    </div>
                    <hr>
                    <div class="row">
                      <div class="col-sm-3">
                        <p class="mb-0">Contact</p>
                      </div>
                      <div class="col-sm-9">
                        <input type="text" id="contact" name="contact" value="<%= resume.contact %>" />
                      </div>
                    </div>
                    <hr>
                    <button type="submit" class="btn btn-outline-primary"  style="margin-left: 70vh;" data-mdb-ripple-color="dark">Submit</button>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </form>
        </section>
        <% } %>

