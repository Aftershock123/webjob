    <style>.label-profile{
      width: 117px;
      padding-top: 7px;
    height: 35px;
    flex-shrink: 0;     
    background: #49ebd8;
    text-align-last: center;
    }</style>
    
</head>
<body>
  
  <%- include('navbar') %>

  <section style="background-color: #eeeeee; ">
    <div class="container py-5 h-100">
      <p class="label-profile">Addjob</p>
    </div>

    
    <form action="/company/updatejob_company/<%= job.idjob_company %>" method="post">
    <div class="row" style="justify-content:center;">


        <div class="col-lg-6">
          <div class="card p-5">
            <div class="card">
              <div class="card-body">
                <div class="row">
                  <div class="col-sm-3">
                    <p class="mb-0">Name Job</p>
                  </div>
                  <div class="col-sm-7">
                    <input type="text" id="name_job"  name="name_job" class="form-control" value="<%= job.name_job %>"/>
                  </div>
                </div>
                <hr>
                <div class="row">
                  <div class="col-sm-3">
                    <p class="mb-0">Role</p>
                  </div>
                  <div class="col-sm-7">
                    <input type="text" id="role" name= "role"  class="form-control" value="<%= job.role %>" />
                  </div>
                </div>
                <hr>
                <div class="row">
                  <div class="col-sm-3">
                    <p class="mb-0">Detail Work</p>
                  </div>
                  <div class="col-sm-7">
                    <textarea type="text" id="detail_work"  name="detail_work" class="form-control" rows="4" ><%= job.detail_work %></textarea>
                  </div>
                </div>
                <hr>
                <div class="row">
                  <div class="col-sm-3">
                    <p class="mb-0">Experience</p>
                  </div>
                  <div class="col-sm-7">
                    <textarea type="text" id="experience" name= "experience" class="form-control" rows="4"><%= job.experience %></textarea>
                  </div>
                </div>
                <hr>
                <div class="row">
                  <div class="col-sm-3">
                    <p class="mb-0">Gender</p>
                  </div>
                  <div class="col-sm-7">
                    <input type="text" id="gender"  name="gender" class="form-control" value="<%= job.gender %>" />
                  </div>
                </div>
                <hr>
                <div class="row">
                  <div class="col-sm-3">
                    <p class="mb-0">Education</p>
                  </div>
                  <div class="col-sm-7">
                    <input type="text" id="education" name= "education" class="form-control" value="<%= job.education %>" />
                  </div>
                </div>
                <hr>
                <div class="row">
                  <div class="col-sm-3">
                    <p class="mb-0">Welfare</p>
                  </div>
                  <div class="col-sm-7">
                    <textarea type="text" id="welfare"  name="welfare" class="form-control" rows="4"  ><%= job.welfare %></textarea>
                  </div>
                </div>
                <hr>
                <div class="row">
                  <div class="col-sm-3">
                    <p class="mb-0">Salary</p>
                  </div>
                  <div class="col-sm-7">
                    <input type="text" id="salary"  name="salary" class="form-control" value="<%= job.salary %>" />
                  </div>
                </div>
                <hr>
                <div class="row">
                  <div class="col-sm-3">
                    <p class="mb-0">Workday</p>
                  </div>
                  <div class="col-sm-7">
                    <input type="text" id="workday" name= "workday" class="form-control"value="<%= job.workday %>" />
                  </div>
                </div>
                <hr>
                <div class="row">
                  <div class="col-sm-3">
                    <p class="mb-0">Day Off</p>
                  </div>
                  <div class="col-sm-7">
                    <input type="text" id="day_off"  name="day_off"  class="form-control"value="<%= job.day_off %>" />
                  </div>
                </div>
                <hr>
                <div class="row">
                  <div class="col-sm-3">
                    <p class="mb-0">Deadline Offer</p>
                  </div>
                  <div class="col-sm-7">
                    <input type="datetime-local" id="deadline_offer" name= "deadline_offer" class="form-control" value="<%= job.deadline_offer %>" />
                  </div>
                </div>
                <hr>
                <div class="row">
                  <div class="col-sm-3">
                    
                    <input type="hidden" id="id_company" name= "id_company"/>
                  </div>
                  <div class="col-sm-9">
                    <!-- <button type="submit" class="btn btn-outline-primary" data-mdb-ripple-color="dark">Primary</button> -->
                    <button type="submit" class="btn btn-outline-primary"  style="margin-left: 50vh;" data-mdb-ripple-color="dark">Submit</button>
                  </div>
                </div>
                
              </div>
            </div>
          </div>
        </div>
      </div>
    </form>
  </section>






